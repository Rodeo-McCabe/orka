with "opengl_shared";
with "opengl-glfw";

project OpenGL_Test is

   for Languages use ("ada");

   for Object_Dir use "obj";
   for Exec_Dir use "bin";

   for Source_Dirs use OpenGL.Glfw.Shared_Test_Sources & "test/gl";

   for Main use ("gl_test-opengl3", "gl_test-context");

   package Ide renames OpenGL_Shared.Ide;
   package Builder renames OpenGL_Shared.Builder;
   package Compiler renames OpenGL_Shared.Compiler;

end OpenGL_Test;
